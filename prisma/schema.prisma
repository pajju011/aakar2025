generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum eventType {
  Technical
  Cultural
  Gaming
  Special
}

model Participant {
  id                 Int      @id @default(autoincrement())
  name               String
  usn                String
  phone              String
  college            String
  events             Event[]
  transaction_id     String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  email              String   @unique
}

model Event {
  id                         Int          @id @default(autoincrement())
  eventName                  String
  eventType                  eventType
  description                String
  fee                        Int
  date                       DateTime
  time                       String
  venue                      String
  studentCoordinators        String[]
  studentCoordinatorContacts String[]
  rules                      String[]
  imageUrl                   String
  Participants               Participant? @relation(fields: [participantId], references: [id])
  participantId              Int?
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique
  password String
  email    String @unique
}
