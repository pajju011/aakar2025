generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum eventCategory {
  Technical
  Cultural
  Gaming
  Special
}

enum eventType {
  Solo
  Team
}

model Participant {
  id                   Int      @id @default(autoincrement())
  name                 String
  usn                  String   @unique
  phone                String
  college              String
  events               Event[]
  transaction_id       String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  email                String   @unique
  paymentScreenshotUrl String
}

model Event {
  id            Int           @id @default(autoincrement())
  eventName     String
  eventCategory eventCategory @default(Technical)
  eventType     eventType     @default(Solo)
  description   String
  fee           Int
  date          DateTime
  time          String
  venue         String
  coordinators  Json          @default("[]") //[{name,phone},..]
  rules         String[]
  imageUrl      String
  Participants  Participant?  @relation(fields: [participantId], references: [id])
  participantId Int?
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique
  password String
  email    String @unique
}
