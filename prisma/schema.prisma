generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum eventCategory {
  Technical
  Cultural
  Gaming
  Special
}

enum eventType {
  Solo
  Team
}

model Participant {
  id                    Int      @id @default(autoincrement())
  uuid                  String   @unique @default(uuid())
  name                  String
  usn                   String   @unique
  phone                 String
  college               String
  events                Event[]
  transaction_ids       String[]
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  email                 String   @unique
  paymentScreenshotUrls String[]
  department            String?
  amount                Int      @default(0)
  year                  Int      @default(1)
  groupMembersData      Json?    @default("[]")
}

model Event {
  id                  Int           @id @default(autoincrement())
  eventName           String
  eventCategory       eventCategory @default(Technical)
  eventType           eventType     @default(Solo)
  minMembers          Int           @default(1)
  maxMembers          Int           @default(1)
  description         String
  fee                 Int
  date                DateTime
  time                String
  venue               String
  studentCoordinators Json          @default("[]")
  facultyCoordinators Json          @default("[]")
  rules               String[]
  imageUrl            String
  Participants        Participant?  @relation(fields: [participantId], references: [id])
  participantId       Int?
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  phone    String @unique
  password String
  email    String @unique
}
